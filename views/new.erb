
<form method="post" action="/animals">
<label for="name">Name:</label>
<input type="text"
name="name"
id="name-field"
/>


<label for="type">Type:</label>
<input type="text"
type="type"
id="type-field"
/>


<label for="breed">Breed:</label>
<input type="text"
breed="breed"
id="breed-field"
/>

<label for="age">Age:</label>
<input type="text"
age="age"
id="age-field"
/>


<label for="admission_date">Admission_date:</label>
<input type="text"
admission_date="admission_date"
id="admission_date-field"
/>

<label for="ready_to_adopt">Ready_to_adopt:</label>
<input type="text"
ready_to_adopt="ready_to_adopt"
id="ready_to_adopt"
/>

<label for="owner-selection">Select a Owner:</label>
<select name="owner" id="owner-selection">
  <option value="1">No Owner </option>
  <option value="1">Sally</option>
  <option value="2">John</option>
  <option value="3">Frank</option>
</select>


<input type="submit"
 value="Create Animal">

</form>
